{
  "name": "react-redux-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-ga": "^2.5.3",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.1.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --watchAll --verbose",
    "test:coverage": "react-scripts test --env=jsdom --color --coverage --verbose",
    "lint": "yarn run lint-prettier",
    "lint-prettier": "prettier --config .prettierrc -l 'src/**/*.tsx*' || (echo \nThese files are not formatted correctly && false)",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.tsx*'"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.9",
    "@types/node": "10.12.2",
    "@types/react": "^16.4.18",
    "@types/react-dom": "16.0.9",
    "@types/react-loadable": "^5.4.1",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-router-redux": "^5.0.16",
    "@types/sinon": "^5.0.4",
    "@types/webpack-env": "^1.13.6",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "prettier": "^1.14.3",
    "sinon": "^7.1.1",
    "typescript": "3.1.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/actions/**",
      "src/reducers/**",
      "src/pages/**",
      "src/components/**",
      "src/hocs/**",
      "src/lib/**"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}

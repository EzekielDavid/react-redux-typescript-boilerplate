{
  "name": "react-redux-typescript-boilerplate",
  "version": "0.0.0",
  "author": "Meemaw <ematej.snuderl@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-ga": "^2.5.7",
    "react-loadable": "^5.5.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "yarn test:unit",
    "test:unit": "react-scripts test --env=jsdom --watchAll --verbose",
    "test:unit:ci": "react-scripts test --env=jsdom --color --coverage --verbose --runInBand --ci",
    "test:e2e": "testcafe chrome src/test/e2e --hostname 127.0.0.1",
    "test:e2e:headless": "testcafe chrome:headless src/test/e2e --hostname 127.0.0.1",
    "test:e2e:ci": "BROWSER=none yarn start 2>&1 > /dev/null & wait-on http-get://localhost:3000 && yarn test:e2e:headless",
    "lint": "yarn run lint-prettier",
    "lint-prettier": "prettier --config .prettierrc -l 'src/**/*.tsx*' || (echo \nThese files are not formatted correctly && false)",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.tsx*'",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "devDependencies": {
    "@storybook/react": "^4.1.11",
    "@types/enzyme": "^3.1.17",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^24.0.0",
    "@types/node": "10.12.23",
    "@types/react": "^16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/react-loadable": "^5.5.0",
    "@types/react-redux": "^7.0.1",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-router-redux": "^5.0.17",
    "@types/sinon": "^7.0.5",
    "@types/webpack-env": "^1.13.7",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "prettier": "^1.16.4",
    "sinon": "^7.2.3",
    "testcafe": "^1.0.0",
    "typescript": "3.3.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/actions/**",
      "src/reducers/**",
      "src/pages/**",
      "src/components/**",
      "src/hocs/**",
      "src/lib/**"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
